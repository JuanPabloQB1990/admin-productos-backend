{
    "compilerOptions": {
        "outDir":"./dist",
        "rootDir":"./src",
        "lib": ["esnext"],
        "target": "ESNext", // permite el new en los objetos modelos
        "moduleResolution": "NodeNext", // permite el new en los objetos modelos
        "module": "NodeNext", // permite el new en los objetos modelos
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "experimentalDecorators": true, // habilita los decorators o @ en la capa modelo
        "emitDecoratorMetadata": true // habilita los decorators o @ en la capa modelo
    },
    "include": ["src/**/*.ts"]
}